#include <stdio.h>

int main(){

	float num1, num2, sum, sub, mult, div;
	char operador;
	
	printf("digite o primeiro numero \n");
	scanf("%f", &num1);
	
	printf("digite o segundo numero \n");
	scanf("%f", &num2);
	
	printf("escolha um operador relacional: \n'+' -> soma\n'-' -> subtracao\n'*' -> multiplicacao \n'/' -> divisao\n");
	scanf("%s", &operador);
	
	switch (operador){
		case '+':
       	 	sum = num1 + num2;
			printf("o resultado eh: %.2f\n", sum);
			break;
		
		case '-':
        	sub = num1 - num2;
			printf("o resultado eh: %.2f\n", sub);
			break;
			
		case '*':
        	mult = num1 * num2;
			printf("o resultado eh: %.2f\n", mult);
			break;

        case '/':
        	if(num2 == 0){
        		printf("divisao por zero eh invalida.");
        		break;
		}else

          div = num1 / num2;
        	    printf("o resultado eh: %.2f\n", div);
        	    break;
		
	default:
		printf("nao informado\n");
			
	}	

}